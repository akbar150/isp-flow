# ===========================================
# EasyLink ISP Billing System - Configuration
# ===========================================
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3001
NODE_ENV=production
CORS_ORIGIN=https://isp.easylinkbd.com

# Database Configuration (MySQL 8.0)
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_db_username
DB_PASS=your_db_password
DB_NAME=easylink_isp

# JWT Authentication
JWT_SECRET=your-256-bit-secret-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration (cPanel SMTP)
SMTP_HOST=mail.easylinkbd.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@easylinkbd.com
SMTP_PASS=your_smtp_password
EMAIL_FROM_NAME=EasyLink ISP
EMAIL_FROM_ADDRESS=noreply@easylinkbd.com

# Brevo API (Fallback Email)
BREVO_API_KEY=xkeysib-your-brevo-api-key

# SMS Configuration (RouteMobile)
SMS_ENABLED=false
ROUTEMOBILE_URL=https://api.routemobile.com/sms
ROUTEMOBILE_USERNAME=your_username
ROUTEMOBILE_PASSWORD=your_password
ROUTEMOBILE_SENDER_ID=EasyLink

# Encryption Key (32 bytes for AES-256)
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# Cron Job Authentication
CRON_SECRET_KEY=random-secret-for-cron-authentication

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=/home/username/logs/app.log
